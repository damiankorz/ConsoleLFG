@model UserRegister
@{Layout="~/Views/Shared/_LayoutExNav.cshtml";}
<div class="row">
    <div class="col-xs-12 col-padding">
        <form class="form-white" asp-controller="ProcessRegister" asp-controller="User" method="post">
            <h1>Register</h1>
            <hr>
            <div class="validation-summary" asp-validation-summary="All"></div>
            <div class="form-group">
                <input asp-for="Email" type="email" placeholder="Email">
            </div>
            <div class="form-group">
                <input asp-for="Password" type="password" placeholder="Password">
            </div>
            <div class="form-group">
                <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password">
            </div>
            <button class="btn btn-primary text-uppercase">Register</button>
            <p>Have an account? <span><a href="/Login">Login!</a></span></p>
            <h2 class="text-center"><span><img src="~/images/lfg-black.png" alt="LFG Logo" width=50></span> <span><i class="fab fa-xbox"></i></span> <span><i class="fab fa-playstation"></i></span></h2>
        </form>
    </div>
</div>